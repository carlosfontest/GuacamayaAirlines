<!DOCTYPE html>
html(lang="en")
   head
      meta(charset="UTF-8")
      meta(name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no")
      meta(http-equiv="X-UA-Compatible" content="ie=edge")
      link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css" defer)
      link(rel="stylesheet" href="/tooltip/tooltipster.bundle.min.css" defer)
      link(rel="stylesheet" href="/tooltip/tooltipster-sideTip-punk.min.css" defer)
      link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css" defer)
      link(rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous" defer)
      link(rel="stylesheet" href="/dist/main.css")
      link(rel="shortcut icon" type="image/png" href="/images/icon.png")
      title #{h.siteTitle}
   body
      header
         if title === 'home'
            .navbar
               .navbar__links
                  .navbar__logo
                     a(href="/") 
                        img(src="/images/logoTexto.png", alt="").navbar__logo__img
                  .navbar__options
                     a(href="/login").navbar__options__login Log In
         else if title === 'login' || title === 'register'
            .navbar
               .navbar__links
                  .navbar__logo
                     a(href="/") 
                        img(src="/images/logoTexto.png", alt="").navbar__logo__img
         else
            if user
               .navbar.navbar-two
                  .navbar__links
                     .navbar__logo
                        a(href="/") 
                           img(src="/images/logoTexto.png", alt="").navbar__logo__img
                     .navbar__options
                        a(href="/logout").navbar__options__login Log Out
            else
               .navbar.navbar-two
                  .navbar__links
                     .navbar__logo
                        a(href="/") 
                           img(src="/images/logoTexto.png", alt="").navbar__logo__img
                     .navbar__options
                        a(href="/login").navbar__options__login Log In
      main
         if locals.flashes
            - const categories = Object.keys(locals.flashes);
            each category in categories
               each message in flashes[category]
                  .flash(class=`flash--${category}`)
                     p.flash__text!= message
                     button.flash__remove(onClick="this.parentElement.remove()") &times;

         block content
      footer
         if title !== 'login' && title !== 'register'
            .footer
               .footer__content
                  a(href="#").footerlink About Guacamaya Airlines
                  p &copy; Guacamaya Airlines
                  a(href="https://carlosfontest.firebaseapp.com").footerlink Designed by Carlos Fontes




      script(src=`https://maps.googleapis.com/maps/api/js?key=${process.env.MAP_KEY}&libraries=places`)
      script(src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js" defer)
      script(src="https://code.jquery.com/jquery-3.3.1.min.js" defer)
      script(src="/tooltip/tooltipster.bundle.min.js" defer)
      script(src="/dist/main.bundle.js" defer)
      